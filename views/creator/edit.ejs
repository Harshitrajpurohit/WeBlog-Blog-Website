<% layout("/layouts/boilerplate") %>
<body>
    <div class="new">
        <h3>Edit Title and Description</h3>
        <div class="new-form">
            <form method="post" action="/creator/<%= listing.id %>?_method=PATCH">
                <div class="form-group">
                  <label for="exampleFormControlInput1">Title</label>
                  <input type="text" required name="title" class="form-control" id="exampleFormControlInput1" placeholder="title" value="<%= listing.title %>">
                </div>
                <div class="form-group">
                  <label for="exampleFormControlTextarea1">Description</label>
                  <textarea class="form-control" required name="description" id="exampleFormControlTextarea1" rows="10"><%= listing.description %></textarea>
                </div>
                <button type="submit">Edit</button>
            </form>
        </div>
    </div>
</body>
